{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "_never",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "lib": ["dom","esnext", "dom.iterable"]
  },
  "include": ["src","types"],
  "exclude": ["**/node_modules/**/*", "node_modules", "**/.next/**/*", "app"]
}